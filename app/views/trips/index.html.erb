<p id="notice"><%= notice %></p>

<h1>Listing Trips</h1>

<table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>

    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.name %></td>
        <td><%= trip.description %></td>
        <td><%= trip.date %></td>
        <td><%= link_to 'Show', trip %></td>
        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

<button type="button" class="btn btn-default btn-lg"><%= link_to 'New Trip', new_trip_path %></button>
