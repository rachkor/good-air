<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Trip</th>
      <th>Destination<th>
      <th>Description</th>
      <th>Location</th>
      <th>Cost</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= link_to 'Destination', destinations_path %></td>
        <td><%= %></td>
        <td><%= activity.description %></td>
        <td><%= activity.location %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.date %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
