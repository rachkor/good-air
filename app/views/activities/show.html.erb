<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Activity: <%= @activity.name %></h1>

  <p>
    <strong>Description:</strong>
    <%= @activity.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @activity.location %>
  </p>

  <p>
    <strong>Cost:</strong>
    <%= @activity.cost %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @activity.date %>
  </p>

  <% if user_signed_in? && current_user == @activity.destination.trip.user || current_user.admin? %> 
    <%= link_to 'Edit Activity', edit_destination_activity_path(@activity.destination_id, @activity) %>
  <% end %> 
</div>

<button type="button" class="btn btn-default btn-block"><%= link_to @activity.destination.name, trip_destination_path(@activity.destination.trip_id, @activity.destination_id) %></button>
